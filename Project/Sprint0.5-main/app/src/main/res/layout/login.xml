<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="AuthViewModel"
            type="com.example.sprintproject.viewmodels.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNeutral"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/colorDarkContrast"
                android:fontFamily="@font/playwritefrmoderne"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@color/colorHighlight"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/usernameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Username"
                    android:fontFamily="@font/playwritefrmoderne"
                    android:textColor="@color/colorDarkContrast"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:autofillHints="username"
                    android:background="@color/colorNeutral"
                    android:hint="@string/username_hint"
                    android:inputType="text"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/playwritefrmoderne"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/passwordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Password"
                    android:fontFamily="@font/playwritefrmoderne"
                    android:textColor="@color/colorDarkContrast"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:autofillHints="password"
                    android:background="@color/colorNeutral"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/playwritefrmoderne"
                    android:textStyle="italic" />
            </LinearLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorHighlight"
                android:text="Login"
                android:fontFamily="@font/playwritefrmoderne"
                android:textSize="20sp"
                android:textColor="@color/colorDarkContrast" />

            <Button
                android:id="@+id/createAccountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorHighlight"
                android:text="Create Account"
                android:fontFamily="@font/playwritefrmoderne"
                android:textSize="20sp"
                android:textColor="@color/colorDarkContrast" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

