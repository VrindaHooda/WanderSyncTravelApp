<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.NavigationFragment">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/colorNeutral">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNeutral"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/travel"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/travel" />

            <ImageButton
                android:id="@+id/transportation"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/transportation" />

            <ImageButton
                android:id="@+id/logistics"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/logistics" />

            <ImageButton
                android:id="@+id/dining"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/dining" />

            <ImageButton
                android:id="@+id/accommodations"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/accommodations" />

            <ImageButton
                android:id="@+id/destination"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/destination" />

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorHighlight"
                android:onClick="buttonClick"
                android:src="@drawable/logout" />

        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</FrameLayout>
