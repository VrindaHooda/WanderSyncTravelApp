<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Declare the ViewModel to be used for data binding -->
        <variable
            name="viewModel"
            type="com.example.sprintproject.viewmodels.VacationTimeFormViewModel" />
        <variable
            name="userId"
            type="java.lang.String" />
        <variable
            name="email"
            type="java.lang.String" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Start Date Input -->
        <EditText
            android:id="@+id/startDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date (yyyy-mm-dd)"
            android:inputType="text"
            android:text="@={viewModel.startDateStr}" />

        <!-- End Date Input -->
        <EditText
            android:id="@+id/endDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date (yyyy-mm-dd)"
            android:inputType="text"
            android:text="@={viewModel.endDateStr}" />

        <!-- Duration Input -->
        <EditText
            android:id="@+id/durationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (in days)"
            android:inputType="number"
            android:text="@={viewModel.durationStr}" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:onClick="@{() -> viewModel.calculateVacationTime(userId, email)}" />

        <!-- Error Message Display -->
        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="@{viewModel.errorMessage != null ? View.VISIBLE : View.GONE}"
            android:text="@{viewModel.errorMessage}" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{viewModel.resultText}" />

    </LinearLayout>

</layout>
