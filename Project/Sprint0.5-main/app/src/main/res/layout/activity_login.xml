<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="authViewModel"
            type="com.example.sprintproject.viewmodels.AuthViewModel" />
        <!-- Import View class for binding expressions -->
        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Username EditText with two-way binding -->
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:text="@={authViewModel.username}" />

        <!-- Password EditText with two-way binding -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="@={authViewModel.password}" />

        <!-- Login Button with data binding for onClick -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:onClick="@{() -> authViewModel.onLoginButtonClicked()}" />

        <!-- Create Account Button with data binding for onClick -->
        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:onClick="@{() -> authViewModel.onCreateAccountButtonClicked()}" />

        <!-- Error TextView to show error messages -->
        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{authViewModel.errorMessage}"
            android:textColor="@android:color/holo_red_light"
            android:visibility="@{authViewModel.errorMessage != null ? View.VISIBLE : View.GONE}" />
    </RelativeLayout>
</layout>