<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorNeutral">

    <TextView
        android:id="@+id/notes_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Notes"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/colorDarkContrast"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/playwritefrmoderne"
        android:layout_gravity="center_horizontal" /> <!-- Center the title -->

    <ListView
        android:id="@+id/notes_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/colorDarkContrast"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorHighlight"
        android:fontFamily="@font/playwritefrmoderne"
        android:text="Exit"
        android:textColor="@color/colorNeutral"
        android:textSize="20sp" />

</LinearLayout>
