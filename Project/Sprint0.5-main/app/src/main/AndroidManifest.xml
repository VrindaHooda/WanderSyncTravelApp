<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sprintproject">

    <!-- Permissions (if needed) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Splash/MainActivity (starts first) -->
        <activity
            android:name=".views.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- HomeScreen Activity (after splash screen) -->
        <activity
            android:name=".views.HomeScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
        </activity>

        <activity android:name=".views.LogisticsActivity" />
        <activity android:name=".views.AccomodationActivity" />
        <activity android:name=".views.DestinationActivity" />
        <activity android:name=".views.TransportationActivity" />
        <activity android:name=".views.TravelCommunityActivity" />
        <activity android:name=".views.DiningActivity" />

    </application>
</manifest>